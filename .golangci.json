{
  "linters": {
    "disable": [
      "errcheck",
      "unused"
    ],
    "enable": [
      "gosimple",
      "stylecheck"
    ]
  },
  "issues": {
    "max-issues-per-linter": 0,
    "max-same-issues": 0,
    "exclude-rules": [
      {
        "path": ".go",
        "text": "((neo4j(.+)(NewDriver|Result))|Id|database.Database|(.+)Deprecated) is deprecated"
      },
      {
        "path": "cache_test\\.go",
        "text": "SA1026:",
        "severity": "warning"
      },
      {
        "path": "foldr_test\\.go",
        "text": "SA4000:",
        "severity": "warning"
      }
    ]
  },
  "run": {
    "skip-dirs": [
      "mocks"
    ],
    "build-tags": [
      "integration",
      "serial_integration"
    ]
  },
  "severity": {
    "default-severity": "error",
    "rules": [
      {
        "text": "(ST\\d{4}|S\\d{4}|SA1019)",
        "severity": "warning"
      },
      {
        "path": "hyperloglog_bench_test\\.go",
        "text": "SA6002:",
        "severity": "warning"
      },
      {
        "path": "expected_ingest.go",
        "text": "ST1022:",
        "severity": "warning"
      }
    ]
  },
  "linters-settings": {
    "stylecheck": {
      "checks": [
        "all",
        "-ST1000",
        "-ST1003"
      ]
    }
  }
}
