{
  "name": "bh-shared-ui",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/javascript/bh-shared-ui/src",
  "projectType": "library",
  "tags": ["type:library"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/dist"],
      "dependsOn": ["^build"],
      "options": {
        "commands": [
          "pnpm check-types",
          "rollup -c rollup.config.js"
        ],
        "cwd": "packages/javascript/bh-shared-ui",
        "parallel": false
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
        "cwd": "packages/javascript/bh-shared-ui"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "TZ=America/Los_Angeles vitest",
        "cwd": "packages/javascript/bh-shared-ui"
      }
    },
    "check-types": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "tsc --noEmit --pretty",
        "cwd": "packages/javascript/bh-shared-ui"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --write \"src/**/*.@(js|jsx|ts|tsx|md|html|css|scss|json)\"",
        "cwd": "packages/javascript/bh-shared-ui"
      }
    },
    "check-format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "prettier --list-different \"src/**/*.@(js|jsx|ts|tsx|md|html|css|scss|json)\"",
        "cwd": "packages/javascript/bh-shared-ui"
      }
    }
  }
}

